@{
    ViewBag.Title = "Home Page";
}

@model List<AngularDemo.Controllers.Demo>

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>


    <select>
        @foreach (var item in Model)
        {
            <option value="@item.no">@item.Name</option>
        }
    </select>

    <div ng-app="myapp" ng-controller="demo">
        <select ng-model="selectedname" ng-change="update(selectedname.no)" ng-options="d.Name for d in demo track by d.no"></select>
        <b>{{selectedname.no}}</b>
    </div>
</div>
<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/angular-route.js"></script>
<script type="text/javascript">

    var model = @Html.Raw(Json.Encode(Model));

    var app = angular.module('myapp',[]);

    app.controller('demo',function($scope) {
        $scope.demo = model;


        $scope.update = function (num) {
            alert(num);
        }



    });
</script>
